{
  "name": "@profullstack/post-quantum-helper",
  "version": "1.0.0",
  "description": "Post-quantum encryption helper using ML-KEM (Kyber) + ChaCha20-Poly1305",
  "type": "module",
  "main": "src/index.js",
  "bin": {
    "quantum": "./bin/cli.js"
  },
  "scripts": {
    "test": "mocha tests/**/*.test.js",
    "test:watch": "mocha tests/**/*.test.js --watch",
    "lint": "eslint src tests bin",
    "lint:fix": "eslint src tests bin --fix",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\" \"bin/**/*.js\"",
    "format:check": "prettier --check \"src/**/*.js\" \"tests/**/*.js\" \"bin/**/*.js\""
  },
  "keywords": [
    "post-quantum",
    "encryption",
    "ml-kem",
    "kyber",
    "chacha20",
    "poly1305",
    "quantum-resistant",
    "cryptography"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@noble/ciphers": "^2.0.1",
    "mlkem": "^2.5.0"
  },
  "optionalDependencies": {
    "inquirer": "^12.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "chai": "^6.2.1",
    "eslint": "^9.14.0",
    "mocha": "^11.7.5",
    "prettier": "^3.3.3"
  }
}
